<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_first">
    <ImageView
        android:id="@+id/f_join_top_imageview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <com.dangjang.dj2015.first.CustomCheckBox2
                android:id="@+id/f_join_terms_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:text="@string/terms_agree"/>
            <TextView
                android:id="@+id/f_join_terms_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textColor="#0099FF"
                android:text="@string/terms_see"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/f_join_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:background="@drawable/searchbox"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:enabled="false"
                android:textSize="15sp"
                android:hint="@string/address"/>
            <TextView
                android:id="@+id/f_join_address_edittext_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:text="배송지 설정 버튼을 통해 주소를 재설정 할 수 있습니다"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/f_join_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/searchbox"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:minEms="6"
                android:textSize="15sp"
                android:hint="@string/email_address_input"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:text="이메일 주소가 로그인 계정으로 사용됩니다"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2">
                <EditText
                    android:id="@+id/f_join_phonenumber_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/searchbox"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:minEms="10"
                    android:maxEms="11"
                    android:textSize="15sp"
                    android:hint="@string/phone_input"/>
            </android.support.design.widget.TextInputLayout>
            <com.dangjang.dj2015.productdetail.CustomCheckBox
                android:id="@+id/f_join_authorization_checkbox"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="2dp"
                app:textSize="12sp"
                app:text="@string/start_authorization"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:text="'-'제외 입력 후 인증을 받아주세요"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/f_join_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:background="@drawable/searchbox"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:minEms="8"
                android:maxEms="20"
                android:textSize="15sp"
                android:hint="@string/password_input"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:text="영어,숫자 포함하여 8~20자 이내로 입력해 주세요"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/f_join_password_confirm_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:background="@drawable/searchbox"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:minEms="8"
                android:maxEms="20"
                android:textSize="15sp"
                android:hint="@string/password_confirm_input"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:text="비밀번호 확인을 위하여 다시 한번 입력해 주세요"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/f_join_send_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:theme="@style/LoginButtonStyle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/join_and_login"/>
        <!--<Button-->
            <!--android:id="@+id/f_join_send_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="18dp"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textStyle="bold"-->
            <!--app:theme="@style/LoginButtonStyle"-->
            <!--android:text="@string/join_and_login"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/already_member"/>
            <TextView
                android:id="@+id/f_join_login_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#0099FF"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="@string/login"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include
            android:id="@+id/f_join_bottom_layout"
            layout="@layout/include_bottom_first_layout"/>
    </LinearLayout>
</LinearLayout>
