<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEdgeLine">
    <LinearLayout
        android:id="@+id/v_productsearch_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginBottom="1dp"
        android:focusable="true"
        android:clickable="true">
        <TextView
            android:id="@+id/v_productsearch_producttext_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/v_productsearch_delete_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_gravity="end"
            android:src="@drawable/delete_x"/>
    </LinearLayout>
</FrameLayout>