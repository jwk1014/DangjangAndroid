<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".first.AddressFragment"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_above="@+id/f_address_bottom_layout">
        <EditText
            android:id="@+id/f_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/searchbox"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="동 이름 입력"/>
        <android.support.v7.widget.CardView
            android:id="@+id/f_address_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="0dp"
            android:layout_marginTop="12dp"
            android:focusable="true"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="주소 입력"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <include
        android:id="@+id/f_address_bottom_layout"
        layout="@layout/include_bottom_first_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"/>

</RelativeLayout>
