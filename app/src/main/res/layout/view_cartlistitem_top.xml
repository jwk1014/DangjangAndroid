<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/v_cartlistitem_top_martname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="빅마트"
            android:textColor="@android:color/white"
            android:layout_marginLeft="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/martnamesmallbox"/>
        <ImageView
            android:id="@+id/v_cartlistitem_top_martdetail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:src="@drawable/martinfor_g"/>
    </FrameLayout>
    <TextView
        android:id="@+id/v_cartlistitem_top_deliverytime_textview"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:text="배달 가능 시간 :"/>
</LinearLayout>