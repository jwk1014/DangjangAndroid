<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/f_customdialog_mainlayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:background="@drawable/searchbox">
        <ImageView
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/f_customdialog_content_textview"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:textSize="12sp"
            android:text="수신된 인증번호를 써주세요.\n회원가입 시 가입한 이메일로 임시 비밀번호가 발송됩니다."/>
        <LinearLayout
            android:id="@+id/f_customdialog_in_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:visibility="gone">
            <EditText
                android:id="@+id/f_customdialog_in_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:hint="수신된 인증번호를 써주세요."/>
            <TextView
                android:id="@+id/f_customdialog_in_textview"
                android:layout_width="84dp"
                android:layout_height="42dp"
                android:text="03:00"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|end">
            <Button
                android:id="@+id/f_customdialog_cancel_button"
                android:layout_width="84dp"
                android:layout_height="42dp"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="취소"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:visibility="gone"/>
            <Button
                android:id="@+id/f_customdialog_submit_button"
                android:layout_width="84dp"
                android:layout_height="42dp"
                android:text="확인"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
